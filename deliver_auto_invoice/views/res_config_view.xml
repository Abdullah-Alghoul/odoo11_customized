<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
	<record id="res_config_settings_view_form_auto_validate" model="ir.ui.view">
		<field name="name">account.res_config_settings_view_form_auto_validate</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="account.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div/div[@id='invoicing_settings']" position="inside">
					<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="auto_validate_invoice"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="auto_validate_invoice"/>
							<div class="text-muted">
								Automatically validate created invoice when validating stock transfer
							</div>
						</div>
					</div>
				</xpath>
		</field>
	</record>
</data>
</odoo>
